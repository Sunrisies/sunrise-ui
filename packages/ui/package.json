{
    "name": "sunrise-ui-plus",
    "version": "0.0.2",
    "description": "一个基于React和Tailwind CSS的现代UI组件库",
    "keywords": [
        "react",
        "ui",
        "components",
        "tailwindcss",
        "design-system",
        "frontend",
        "typescript"
    ],
    "author": "朝阳",
    "license": "MIT",
    "homepage": "https://github.com/Sunrisies/sunrise-ui#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Sunrisies/sunrise-ui.git"
    },
    "bugs": {
        "url": "https://github.com/Sunrisies/sunrise-ui/issues"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "main": "dist/index.mjs",
    "types": "dist/index.d.mts",
    "modules": "dist/index.mjs",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "./styles.css": "./dist/styles.css",
        "./*": {
            "types": "./dist/*.d.mts",
            "default": "./dist/*.mjs"
        }
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "pnpm run clean && tsup && pnpm run build:css",
        "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles.css --minify",
        "clean": "rimraf dist",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "type-check": "tsc --noEmit",
        "clear": " rimraf node_modules dist",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "prepublishOnly": "pnpm run build",
        "publish": "node publish.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.17",
        "@tailwindcss/postcss": "^4.1.17",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "postcss": "^8.4.47",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "tailwindcss": "^4.1.17",
        "vitepress": "^1.0.0-rc.31"
    },
    "dependencies": {
        "class-variance-authority": "^0.7.0",
        "glob": "^10.3.10",
        "lucide-react": "^0.553.0",
        "rimraf": "^5.0.5",
        "tsup": "8.5.0",
        "typescript": "5.9.3"
    }
}